<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.jack.imagepickorcapture.helper.SquareImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:background="@color/app.theme.background"
        android:contentDescription="@string/imagedesc"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_gray" />

    <TextView
        android:id="@+id/photo_upload_txt_num"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/circle_number_image"
        android:gravity="center"
        android:textColor="@color/plain_white"
        android:textSize="16sp"
        android:textStyle="bold" />
</RelativeLayout>